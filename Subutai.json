{
  "name": "${envName}",
  "description": "testapp",
  "version": "1.0.1",
  "author": "Sydyk",
  "containers": [
    {
      "hostname": "debian",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "CUSTOM",
      "ram": {
        "type": "ram",
        "value": "512.0000MiB"
      },
      "cpu": {
        "type": "cpu",
        "value": "10%"
      },
      "disk": {
        "type": "disk",
        "value": "5.0000GiB"
      }
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://gidish/mytestrepo/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
      {
        "key": "password",
        "value": "${newOFBizdbUserPassword}"
      }
    ],
    "groups": [
      {
        "name": "os",
        "hostnames": [
          "debian"
        ]
      }
    ]
  },
  "user-variables": {
    "newOFBizdbUserPassword": {
      "description": "New password for ofbiz db user",
      "type": "string",
      "default": "changeme",
      "validation": "[a-zA-Z0-9]+"
    },
    "envName": {
      "description": "Enter your environment name",
      "type": "string",
      "default": "wordpressenv",
      "validation": "[a-zA-Z0-9]+"
    }
  }
}
