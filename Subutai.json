{
  "name": "${envName}",
  "description": "testapp",
  "version": "1.0.1",
  "author": "Sydyk",
  "containers": [
    {
      "hostname": "debian",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "${containerType}"
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/mytestrepo/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
      {
        "key": "password",
        "value": "${newOFBizdbUserPassword}"
      }
    ],
    "groups": [
      {
        "name": "os",
        "hostnames": [
          "debian"
        ]
      }
    ]
  },
  "user-variables": {
    "containerType": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
   "newOFBizdbUserPassword": {
      "description": "New password for ofbiz db user",
      "type": "string",
      "default": "changeme",
      "validation": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&+=])(?=\S+$).{8,}$"
    },
    "envName": {
      "description": "Enter your environment name",
      "type": "string",
      "default": "wordpress env",
      "validation": "[a-zA-Z0-9]+"
    }
  }
}
